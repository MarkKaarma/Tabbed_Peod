<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Tabbed_Peod.Veebruar"
             Title="Veebruar">
    <ContentPage.Content>
        <StackLayout>
            <Image Source="february.jpg"/>
            <Label
                Text="24 февраля – День независимости"
                VerticalOptions="End"
                HorizontalOptions="Center"/>
            <Button x:Name="February"
                    Text="More information (URL)"
                    VerticalOptions="End"
                    HorizontalOptions="StartAndExpand"
                    Clicked="February_Clicked"/>
            <Button x:Name="Texti"
                    Text="Fun fact"
                    VerticalOptions="Start"
                    HorizontalOptions="FillAndExpand" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>