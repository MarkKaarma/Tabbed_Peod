<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Tabbed_Peod.November"
             Title="November">
    <ContentPage.Content>
        <StackLayout>
            <Image Source="november.jpg"/>
            <Label
                Text="8 ноября – День отца"
                VerticalOptions="End"
                HorizontalOptions="Center"/>
            <Button x:Name="November1"
                    Text="More information (URL)"
                    VerticalOptions="End"
                    HorizontalOptions="StartAndExpand"
                    Clicked="November1_Clicked"/>
            <Button x:Name="Texti"
                    Text="Fun fact"
                    VerticalOptions="Start"
                    HorizontalOptions="FillAndExpand"
                    Clicked="Texti_Clicked"/>
            <Frame x:Name="Textis" Margin="20"
                   VerticalOptions="End"
                   HorizontalOptions="FillAndExpand">
                <Label x:Name="Textis1"
                     Text="14 ноября отмечается День детей Индии. Целью этого дня является: донести до родителей, что воспитывать детей необходимо в духе патриотизма, чтобы будущее поколение в любой момент смогло встать за нее грудью."
                     IsVisible="false">
                </Label>
            </Frame>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>