<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Tabbed_Peod.Aprill"
             Title="Aprill">
    <ContentPage.Content>
        <StackLayout>
            <Image Source="april.jpg"/>
            <Label
                Text="10 апреля – Страстная пятница"
                VerticalOptions="End"
                HorizontalOptions="Center"/>
            <Button x:Name="April"
                    Text="More information (URL)"
                    VerticalOptions="End"
                    HorizontalOptions="StartAndExpand"
                    Clicked="April_Clicked"/>
            <Button x:Name="Texti"
                    Text="Fun fact"
                    VerticalOptions="Start"
                    HorizontalOptions="FillAndExpand" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>