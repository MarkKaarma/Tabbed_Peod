<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Tabbed_Peod.Jaanuar"
             Title="Jaanuar">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout>
                <Image Source="january.png"/>
                <Label
                Text="1 января – Новый год"
                VerticalOptions="End"
                HorizontalOptions="Center"/>
                <Button x:Name="January"
                    Text="More information (URL)"
                    VerticalOptions="End"
                    HorizontalOptions="StartAndExpand"
                    Clicked="January_Clicked"/>
                <Button x:Name="Texti"
                    Text="Fun fact"
                    VerticalOptions="Start"
                    HorizontalOptions="FillAndExpand"
                    Clicked="Texti_Clicked"/>
                <Frame x:Name="Textis" Margin="20"
                   VerticalOptions="End"
                   HorizontalOptions="FillAndExpand">
                    <Label x:Name="Textis1"
                     Text="Январь это тот месяц, где ты тратишь больше всего денег на родственников"
                     IsVisible="false">
                    </Label>
                </Frame>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>