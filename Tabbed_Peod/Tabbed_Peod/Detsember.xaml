<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Tabbed_Peod.Detsember"
             Title="Detsember">
    <ContentPage.Content>
        <StackLayout>
            <Image Source="december.jpg">
            </Image>
            <Label
                Text="24 декабря – канун Рождества"
                VerticalOptions="End"
                HorizontalOptions="Center"/>
            <Button x:Name="December"
                    Text="Hm..."
                    VerticalOptions="End"
                    HorizontalOptions="StartAndExpand"
                    Clicked="December_Clicked"/>
            <Button x:Name="Texti"
                    Text="Fun fact"
                    VerticalOptions="Start"
                    HorizontalOptions="FillAndExpand"
                    Clicked="Texti_Clicked"/>
            <Frame x:Name="Textis" Margin="20"
                   VerticalOptions="End"
                   HorizontalOptions="FillAndExpand">
                <Label x:Name="Textis1"
                     Text="Декабрь это тот месяц, где ты тратишь больше всего денег на родственников"
                     IsVisible="false">
                </Label>
            </Frame>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>